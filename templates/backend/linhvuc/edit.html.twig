        <label for="lv_ten">Tên loại sản phẩm</label>
        <input type="text" class="form-control" id="lv_ten" name="lv_ten" value="{{ linhvuc.TENLINHVUC }}">
    </div>
    <button class="btn btn-primary" name="btnSave">Cập nhật</button>
    <a href="index.php" class="btn btn-info" name="btnCancel">Quay về</a>

</form>
