{# Kế thừa layout backend #}
{% extends "backend/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Danh sách Sách
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Danh sách Sách
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<!-- Nút thêm mới, bấm vào sẽ hiển thị form nhập thông tin Thêm mới -->
<a href="create.php" class="btn btn-primary">
    <span data-feather="plus"></span> Thêm mới
</a>
<br><br>
<table class="table table-bordered table-hover mt-2 display" id="example">
    <thead class="thead-dark">
        <tr>
            <th>Mã sách</th>
            <th>Tên sách</th>
            <th>Hình ảnh</th>
            <th>Mô tả</th>
            <th>Tác giả</th>
            <th>Loại sách</th>
            <th>Lĩnh vực</th>
            <th>Giá mua</th>
            <th>Số lượng</th>
            <th>Ngày nhập</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        {% for sach in ds_sach %}
        <tr>
            <td>{{ sach.s_ma }}</td>
            <td>{{ sach.s_ten }}</td>
            {% if sach.s_hinhanh %}
            <td><img src="{{ sach.s_hinhanh }}" style="height: 150px; width: 100px;" alt=""></td>
            {% else %}
            <td><img src="../../../quanlycuahangsach/assets/upload/100x150.png" alt=""></td>
            {% endif %}

            <td>{{ sach.s_mota|raw  }}</td>
            <td>{{ sach.tg_ten }}</td>
            <td>{{ sach.ls_ten }}</td>
            <td>{{ sach.lv_ten }}</td>
            <td>{{ sach.s_gia }}</td>
            <td>{{ sach.s_soluong }}</td>
            <td>{{ sach.s_ngaynhap }}</td>
            <td>
                <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `s_ma` -->
                <a href="/quanlycuahangsach/backend/sach/edit.php?s_ma={{ sach.s_ma }}" class="btn btn-warning">
                    <span data-feather="edit"></span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path
                            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd"
                            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                    </svg>
                </a>

                <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `s_ma` -->
                <a href="/quanlycuahangsach/backend/sach/delete.php?s_ma={{ sach.s_ma }}" class="btn btn-danger">
                    <span data-feather="delete"></span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-trash" viewBox="0 0 16 16">
                        <path
                            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                        <path fill-rule="evenodd"
                            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                    </svg>
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
{# End Nội dung trong block content #}