{% block content %}
<form name="frmLinhVuc" id="frmLinhVuc" method="post" action="/quanlycuahangsach/backend/linhvuc/edit.php?lv_ma={{ linhvuc.MALINHVUC }}">
    <div class="form-group">
        <label for="lv_ma">Mã loại sản phẩm</label>
        <input type="text" class="form-control" id="lv_ma" name="lv_ma"  readonly value="{{ linhvuc.MALINHVUC }}">
        
    </div>
